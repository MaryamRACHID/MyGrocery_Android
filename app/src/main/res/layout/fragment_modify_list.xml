<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Modify_list">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="25dp"
            android:background="@color/gris1"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/modifylist">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modify your List"
                android:textSize="18sp"
                android:textColor="@color/grey_bleu"
                android:textStyle="bold|italic"
                />

            <View
                android:layout_marginTop="20dp"
                style="@style/Divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List Name"
                android:layout_marginTop="30dp"
                android:textColor="@color/title"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_name_modifie"
                android:textSize="14sp"
                android:textColor="@color/grey_bleu"
                android:hint="Dinner List"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Description"
                android:textColor="@color/title"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_description_modifi"
                android:textSize="14sp"
                android:textColor="@color/grey_bleu"
                android:hint="for family weekend"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select products"
                android:layout_marginTop="20dp"
                android:textColor="@color/title"
                android:textStyle="bold"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:id="@+id/listItem"
                />

            <Button
                android:id="@+id/idModifylist"
                android:layout_gravity="center"
                android:text="Save"
                app:cornerRadius="200dp"
                android:textSize="12sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearlayout3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                app:backgroundTint="@color/grey_bleu"/>
        </LinearLayout>



    </RelativeLayout>