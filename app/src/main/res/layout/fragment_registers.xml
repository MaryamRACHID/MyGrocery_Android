<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registers.RegistersFragment"
    android:id="@+id/register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/gris1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <View
            android:layout_marginTop="20dp"
            style="@style/Divider"/>


        <ListView
            android:id="@+id/registersList"
            android:layout_width="fill_parent"
            android:layout_height="520dp"
            android:divider="@color/grey_bleu"
            android:dividerHeight="1dp"
            android:listSelector="#ffd47d">
        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnAddList"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="Save modification"
            android:textSize="12dp"
            app:cornerRadius="200dp"
            app:backgroundTint="@color/grey_bleu"/>
        <Button
            android:id="@+id/AddproductsTOlist"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="Add products"
            android:textSize="12dp"
            app:cornerRadius="200dp"
            app:backgroundTint="@color/grey_bleu"/>
    </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>